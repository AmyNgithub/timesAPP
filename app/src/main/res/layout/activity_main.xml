<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/gradient"
    android:keepScreenOn="true"> <!--http://stackoverflow.com/questions/5712849/how-do-i-keep-the-screen-on-in-my-app -->

    <com.example.iapps.timesapp.TimerView
        android:id="@+id/activity_main_minutes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="72sp"
        android:padding="25dp"/>

    <ImageView
        android:id="@+id/imageViewPhoneRot"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:src="@drawable/put_on_table"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/activity_main_minutes"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewLock"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:visibility="invisible"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@+id/activity_main_minutes"
        android:layout_centerHorizontal="true" />

    <!--android:layout_width="wrap_content"
android:layout_height="wrap_content"-->

</RelativeLayout>

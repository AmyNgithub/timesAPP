<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iapps.timesapp" >

    <uses-permission android:name="android.permission.VIBRATE"/>
    //To allow wake up of phone when alarm goes off
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RotationActivity"
            android:label="@string/title_activity_rotation" >
        </activity>
        <activity
            android:name=".RotationActivity2"
            android:label="@string/title_activity_rotation_activity2" >
        </activity>
        <activity
            android:name=".GyroRotationActivity"
            android:label="@string/title_activity_gyro_rotation" >
        </activity>
    </application>

</manifest>
